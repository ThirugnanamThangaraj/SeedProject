{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hostingPlanName": {
      "type": "string",
      "minLength": 1
    },
    "hostingAppName": {
      "type": "string",
      "minLength": 1
    },
    "skuName": {
      "type": "string",
      "defaultValue": "S1",
      "allowedValues": [
        "S1",
        "S2",
        "S3",
        "P1"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and instance size. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "skuCapacity": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 1,
      "metadata": {
        "description": "Describes plan's instance count"
      }
    },
    "_artifactsLocation": {
      "type": "string"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring"
    },
    "MBRepository-apiPackageFolder": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "WebDeploy package location. This path is relative to the _artifactsLocation parameter"
      }
    },
    "MBRepository-apiPackageFileName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Name of the webdeploy package"
      }
    }
  },
  "variables": {
    "webSiteName": "[parameters('hostingAppName')]",
    "serverfarms": "[parameters('hostingPlanName')]"
  },
  "resources": [
    {
      "apiVersion": "2015-08-01",
      "name": "[variables('webSiteName')]",
      "type": "Microsoft.Web/sites",
      "location": "East US 2",
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('serverfarms'))]": "Resource",
        "displayName": "Website"
      },
      "dependsOn": [ ],
      "properties": {
        "name": "[variables('webSiteName')]",
        "hostNames": [
          "[concat(variables('webSiteName'),'.mercorpajb.local')]"
        ],
        "enabledHostNames": [
          "[concat(variables('webSiteName'),'.mercorpajb.local')]",
          "[concat(variables('webSiteName'),'.scm.mercorpajb.local')]"
        ],
        "hostNameSslStates": [
          {
            "name": "[concat(variables('webSiteName'),'.mercorpajb.local')]",
            "sslState": 0,
            "thumbprint": null,
            "ipBasedSslState": 0
          },
          {
            "name": "[concat(variables('webSiteName'),'.scm.mercorpajb.local')]",
            "sslState": 0,
            "thumbprint": null,
            "ipBasedSslState": 0
          }
        ],
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('serverfarms'))]"
      },
      "resources": [
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('webSiteName'))]"
          ],
          "tags": {
            "displayName": "dns_server"
          },
          "properties": {
            "website_alt_dns_server": "10.250.1.6",
            "website_dns_server": "10.250.1.5",
	    "WEBSITE_NODE_DEFAULT_VERSION": "6.9.1"
          }
        },
        {
          "name": "MSDeploy",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', variables('webSiteName'))]"
          ],
          "tags": {
            "displayName": "MBRepository-api"
          },
          "properties": {
            "packageUri": "[concat(parameters('_artifactsLocation'), '/', parameters('MBRepository-apiPackageFolder'), '/', parameters('MBRepository-apiPackageFileName'), parameters('_artifactsLocationSasToken'))]",
            "dbType": "None",
            "connectionString": "",
            "setParameters": {
              "IIS Web Application Name": "[variables('webSiteName')]"
            }
          }
        }
      ]
    }
  ]
}
